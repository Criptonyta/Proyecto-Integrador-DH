<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("partials/head.ejs")%>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Usa esta linea para direccionarla a tu CSS -->


    <!--<link rel="stylesheet" href="/css/styles.css">  Descomentar esta linea cuando el CSS este compilado -->

</head>

<body>
    <!-- ======= HEADER | BARRA DE NAVEGACION HOME ========= -->

    <%- include ('partials/navbarAlex.ejs', {}) %>

    <!--CONTENIDO-->
    <main class="principal">
        <!--productos-->
        <div class="create-product-container">

            <!-- <div class="productImagesButtons"> -->
            <!-- <button><i class="fas fa-upload"><span class="agregarTexto special">Subir cancion</span></i></button> -->
            <!-- <button><input type='file' placeholder="Carga tu foto aqui" style="display: none"><i class="fas fa-image"><span class="agregarTexto special">Cambiar imagen</span></i></button> -->
            <!-- </div> -->

            <div class="create-productInformation-container">
                <form method='POST' action="/products/createproduct" enctype="multipart/form-data">
                    <% if (locals.errors) { %>
                        <div class="validator-errors">
                            <% errors.forEach(function(error){ %>
                                <p><i class="fas fa-exclamation"></i><%= error.msg %></p>
                            <% }); %>
                        </div>
                    <% } %>
                    <div class="productImages">
                        <img id="productempty-instrumentPhoto" style="display: none;">
                        <label for='productEmptyButton' class='productEmptyButton'>Cargá una imagen</label>
                        <input class='productEmptyButton' name='productEmptyButton' id='productEmptyButton' type='file'
                            placeholder="Cargá tu foto aquí">
                    </div>
                    <div class="productInformation">
                        <h2><input type='text' name='titulo' placeholder="Cargá tu título aquí"
                            value="<% if (locals.errors && oldData && oldData.titulo){%><%= oldData.titulo %> <% } %>"></h2>
                        <p class='create-productprice'><input type='text' name='precio' placeholder="Precio" 
                            value="<% if (locals.errors && oldData && oldData.precio && !isNaN(oldData.precio)){%><%= Number(oldData.precio) %> <% } %>">
                            <span class="currency">U$D</span></p>
                        <!-- <i class="fas fa-star"><span class="stars">4.5</span></i> -->
                    </div>
                    <p class="create-productDescription"><input name='descripcion' type='textarea'
                            placeholder="Cargá una breve descripción de tu producto"
                            value="<% if (locals.errors && oldData && oldData.descripcion){%><%= oldData.descripcion %> <% } %>"></p>
                    <!-- <button class="agregar"><i class="fas fa-cart-plus"><span class="agregarTexto">Agregar al carrito</span></i></button> -->

                    <div class="editar">
                        <button class='Salvar-anuncio-button'>Salvar anuncio</button>
                    </div>
            </div>
            </form>
        </div>

    </main>

    <!-- ======= FOOTER | PIE DE PAGINA ========= -->

    <%- include ('partials/footer.ejs', {}) %>
    <script src="/js/productempty.js"></script>

</body>

</html>