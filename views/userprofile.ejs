<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("partials/head.ejs")%>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <!-- ======= HEADER | BARRA DE NAVEGACION HOME ========= -->

    <%- include ('partials/navbarlogada.ejs', {}) %>


    <!-- ======= BODY | CUERPO DEL USERPROFILE ========= -->

    <main class="userprofile-form">
        <!--FORMULARIO-->
        <section>
            <div class="userprofile-formulario">
                <h4>Perfil</h4>

                <p class="userprofile-editAvatar-section">
                    <i class="fas fa-camera"><label> Foto de perfil:</label></i>
                    <img src="/images/usersAvatars/resizedandcropped/<%= usuarioInfo.userAvatar %>" width=100px
                        alt="fotoPerfil">
                </p>

                <p>
                    <i class="fas fa-at"><label> Email:</label></i>
                    <%= usuarioInfo.email %>

                </p>

                <div class="userprofile-items">
                    <p>
                        <i class="fas fa-id-badge"><label> Nombre:</label></i>
                        <%= usuarioInfo.nombre %>
                    </p>

                    <p>
                        <i class="fas fa-id-badge"><label> Apellido:</label></i>
                        <%= usuarioInfo.apellido %>
                    </p>

                    <p>
                        <i class="fas fa-music"><label>Biografia:</label><br></i>
                        <%= usuarioInfo.bio %>
                    </p>

                    <p>
                        <label> Habilidades:</label></i>
                        <%= usuarioInfo.skills %>

                        <section>
                            <a href='/user/userprofile/<%= usuarioInfo.id %>/edit' class="userprofile-button">Editar
                                perfil </a>
                        </section>

                </div>
            </div>


            <form action="" class="userprofile-formulario">
                <h4>Mis anuncios</h4>

                <p class="userprofile-Registro-Texto-Descriptivo">
                    Informa que tipo de anuncio quieres crear y completalo:<br>
                </p>

                <section class="userprofile-crearanuncios">
                    <a href="/products/createproduct" class="userprofile-venderproducto-button">Instrumento </a>

                    <a href="/products/createsong" class="userprofile-vendercancion-button">Canción </a>
                </section>

                <div>
                    <p class="userprofile-Registro-Texto-Descriptivo">
                        Podes ver, editar y crear tus anuncios desde aqui.<br>
                    </p>

                    <table class="userprofile-tableanuncios">
                        <p>Mis Canciones</p>
                        <tr>
                            <th>Anuncio</th>
                            <th>Descripción</th>
                            <th>Actualización</th>
                        </tr>

                        <% songsUser.forEach(function(songUsuario, indice){ %>

                        <tr>
                            <td><%= indice+1 %> </td>
                            <td><%= songUsuario.titulo %> </td>
                            <td><a href="">Ver mas...</a></td> <!-- VER DE APLICAR <a></a> -->
                        </tr>
                        <% }) %>

                    </table>
                    <table class="userprofile-tableanuncios">
                        <p>Mis Instrumentos</p>
                        <tr>
                            <th>Anuncio</th>
                            <th>Descripción</th>
                            <th>Actualización</th>
                        </tr>

                        <% instrumentUser.forEach(function(instrumentoUsuario, indice){ %>

                        <tr>
                            <td><%= indice+1 %> </td>
                            <td><%= instrumentoUsuario.titulo %> </td>
                            <td><a href="">Ver mas...</a></td> <!-- VER DE APLICAR <a></a> -->
                        </tr>
                        <% }) %>

                    </table>


                </div>

            </form>

        </section>

    </main>

    <!-- ======= FOOTER | PIE DE PAGINA ========= -->

    <%- include ('partials/footer.ejs', {}) %>
</body>

</html>